<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/loadingTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.5"
        android:textAlignment="center"
        android:text="@string/loadingPreviewText" />
    <Button
        android:id="@+id/leftTopButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_button"
        android:onClick="onClickLeftTopComplication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.17"
        app:layout_constraintHeight_percent="0.17"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintVertical_bias="0.235" />
    <Button
        android:id="@+id/leftBottomButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_button"
        android:onClick="onClickLeftBottomComplication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.17"
        app:layout_constraintHeight_percent="0.17"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintVertical_bias="0.475"/>
    <Button
        android:id="@+id/rightTopButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_button"
        android:onClick="onClickRightTopComplication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.17"
        app:layout_constraintHeight_percent="0.17"
        app:layout_constraintHorizontal_bias="0.680"
        app:layout_constraintVertical_bias="0.235"/>
    <Button
        android:id="@+id/rightBottomButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_button"
        android:onClick="onClickRightBottomComplication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.17"
        app:layout_constraintHeight_percent="0.17"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintVertical_bias="0.475"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/editorPreviewContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>