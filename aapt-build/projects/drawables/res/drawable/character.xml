<?xml version="1.0" encoding="utf-8" ?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Body-->
	<item>
		<shape
		    android:shape="line" >
                <size
                    android:width="8dp"
                    android:height="32dp" />
		    <stroke
		        android:width="5dp"
		        android:color="@android:color/darker_gray" />
		</shape>
    </item>
    <!--Head-->
	<item
        android:bottom="16dp" >
		<shape
		    android:shape="line" >
            <size
                android:width="8dp"
                android:height="32dp" />
		    <stroke
		        android:width="5dp"
		        android:color="@android:color/darker_gray" />
		</shape>
    </item>    
	<!--Arms-->	    
    <item
        android:bottom="8dp" >
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90" >
			<shape
			    android:shape="line" >
                <size
                    android:width="8dp"
                    android:height="32dp" />
			    <stroke
			        android:width="5dp"
			        android:color="@android:color/darker_gray" />
		    </shape>
        </rotate>
    </item>
	<!--Left leg-->	    
    <item
        android:bottom="-14dp"
        android:left="-4dp"
        android:right="4dp" >
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45" >
			<shape
			    android:shape="line" >
                <size
                    android:width="8dp"
                    android:height="32dp" />
			    <stroke
			        android:width="5dp"
			        android:color="@android:color/darker_gray" />
			</shape>
        </rotate>
    </item>
	<!--Right leg-->	    
    <item
        android:bottom="-14dp"
        android:left="-4dp"
        android:right="4dp" >
        <rotate
            android:fromDegrees="135"
            android:toDegrees="135" >
			<shape
			    android:shape="line" >
                <size
                    android:width="8dp"
                    android:height="32dp" />
			    <stroke
			        android:width="5dp"
			        android:color="@android:color/darker_gray" />
			</shape>
        </rotate>
    </item>
</layer-list>
