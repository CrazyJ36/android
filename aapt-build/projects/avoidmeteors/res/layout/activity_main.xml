<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <com.crazyj36.avoidmeteors.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7" />
	 <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="0.3"
         android:splitMotionEvents="false" >
        <!-- splitMotionEvents prevents multiple button threads from running-->
		    <TextView
		        android:id="@+id/scoreView"
		        android:layout_width="match_parent"
		        android:layout_height="54dp"
                android:gravity="center_horizontal" />
            <LinearLayout
                android:id="@+id/buttonLayoutRoot"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_below="@id/scoreView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:weightSum="1" >
			    <Button
			        android:id="@+id/buttonUp"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
                    android:layout_weight="0.5"
		  	        android:text="@string/buttonUpText" />
			    <Button
			        android:id="@+id/buttonDown"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
                    android:layout_weight="0.5"
			        android:text="@string/buttonDownText" />
            </LinearLayout>
		    <Button
		        android:id="@+id/buttonLeft"
		        android:layout_width="64dp"
		        android:layout_height="64dp"
	            android:layout_toLeftOf="@id/buttonLayoutRoot"
                android:layout_marginBottom="64dp"
                android:layout_centerVertical="true"
		        android:text="@string/buttonLeftText" />
		    <Button
		        android:id="@+id/buttonRight"
		        android:layout_width="64dp"
		        android:layout_height="64dp"
	            android:layout_toRightOf="@id/buttonLayoutRoot"
                android:layout_marginBottom="64dp"
                android:layout_centerVertical="true"
		        android:text="@string/buttonRightText" />
    </RelativeLayout>

</LinearLayout>
