<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

    <com.crazyj36.avoidmeteors.GameView
        android:id="@+id/gameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

	 <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true" >
	    <TextView
	        android:id="@+id/scoreView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    <Button
	        android:id="@+id/buttonUp"
	        android:layout_width="48dp"
	        android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
  	        android:text="@string/buttonUpText" />
	    <Button
	        android:id="@+id/buttonDown"
	        android:layout_width="48dp"
	        android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonUp"
	        android:text="@string/buttonDownText" />
	    <Button
	        android:id="@+id/buttonLeft"
	        android:layout_width="48dp"
	        android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/buttonDown"
            android:layout_marginTop="24dp"
	        android:text="@string/buttonLeftText" />
	    <Button
	        android:id="@+id/buttonRight"
	        android:layout_width="48dp"
	        android:layout_height="wrap_content"
            android:layout_toRightOf="@id/buttonDown"
            android:layout_marginTop="24dp"
	        android:text="@string/buttonRightText" />
    </RelativeLayout>
</RelativeLayout>
