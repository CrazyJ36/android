<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp" >

    <ScrollView
        android:id="@+id/dialog1TextLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_gravity="top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialogTv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialogTv1Txt" />

            <TextView
                android:id="@+id/dialogTv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialogTv2Txt" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"    
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <Button
	        android:id="@+id/dialogBtn1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/dialogBtn1Txt" />    

	    <Button
	        android:id="@+id/dialogBtn2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/dialogBtn2Txt" />

    </LinearLayout>

</LinearLayout>
